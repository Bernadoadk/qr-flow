{
  "buildCommand": "npm run build",
  "outputDirectory": "build/client",
  "framework": "remix",
  "installCommand": "npm install",
  "devCommand": "npm run dev",
  "functions": {
    "app/routes/**": {
      "maxDuration": 30
    }
  },
  "env": {
    "NODE_ENV": "production"
  },
  "build": {
    "env": {
      "NODE_ENV": "production"
    }
  },
  "routes": [
    {
      "src": "/scan/(.*)",
      "dest": "/scan/$1"
    },
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "/webhooks/(.*)",
      "dest": "/webhooks/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/$1"
    }
  ],
  "regions": ["iad1"],
  "crons": [
    {
      "path": "/api/cron/cleanup",
      "schedule": "0 2 * * *"
    }
  ]
}
